{
  "name": "arp-agent",
  "version": "0.1.0",
  "description": "A typescript template for building an agent that connects to ARP",
  "main": "build/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rm -rf build/ && npx tsc",
    "prettify": "npx prettier --write \"src/**\"",
    "docs": "npx typedoc --out ./docs ./lib/ --target ES6 --ignoreCompilerErrors --exclude **/*.test.ts --readme ./README.md",
    "watch": "npx tsc -w",
    "start": "node build/index.js"
  },
  "keywords": [],
  "author": "Dr James Gopsill",
  "license": "ISC",
  "devDependencies": {
    "@types/serialport": "^8.0.0",
    "@types/node-fetch": "^2.5.6",
    "eslint": "^6.8.0",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3",
    "typedoc": "^0.17.4"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "node-fetch": "^2.6.0",
    "serialport": "^8.0.7"
  }
}
